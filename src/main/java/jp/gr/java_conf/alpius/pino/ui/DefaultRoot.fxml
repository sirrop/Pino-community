<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jp.gr.java_conf.alpius.pino.ui.actionSystem.*?>
<?import jp.gr.java_conf.alpius.pino.ui.editor.BrushEditor?>
<?import jp.gr.java_conf.alpius.pino.ui.editor.EditorGroup?>
<?import jp.gr.java_conf.alpius.pino.ui.editor.LayerEditor?>
<?import jp.gr.java_conf.alpius.pino.ui.Layer?>
<?import org.controlsfx.control.StatusBar?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="jp.gr.java_conf.alpius.pino.ui.Root"
      prefHeight="400.0" prefWidth="600.0">
    <MenuBar fx:id="menuBar">
        <Menu text="ファイル(_F)">
            <ActionableMenuItem text="新規プロジェクトを作成(_N)" actionId="pino:create-project"/>
            <ActionableMenuItem text="プロジェクトを開く(_O)" actionId="pino:open-project">
                <graphic>
                    <FontIcon iconLiteral="mdi2f-folder-open"/>
                </graphic>
            </ActionableMenuItem>
            <ActionableMenuItem text="閉じる(_J)" actionId="pino:close-project"/>
            <ActionableMenuItem text="名前をつけて保存" actionId="pino:save-project-as"/>
            <ActionableMenuItem text="保存(_S)" actionId="pino:save-project"/>
            <ActionableMenuItem text="出力" actionId="pino:output-project"/>
            <ActionableMenuItem text="環境設定(_T)" actionId="pino:show-env-config">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-cog"/>
                </graphic>
            </ActionableMenuItem>
            <ActionableMenuItem text="印刷設定" actionId="pino:show-copy-config"/>
            <ActionableMenuItem text="印刷" actionId="pino:copy"/>
            <ActionableMenuItem text="終了(_X)" actionId="pino:exit-app"/>
        </Menu>
        <Menu text="編集(_E)">
            <ActionableMenuItem text="ひとつ戻る(_U)" actionId="pino:undo"/>
            <ActionableMenuItem text="ひとつ進む(_R)" actionId="pino:redo"/>
            <ActionableMenuItem text="レイヤーを追加" actionId="pino:add-layer"/>
        </Menu>
        <Menu text="フィルタ(_F)">
            <Menu text="ブラー">
                <ActionableMenuItem text="平均化" actionId="pino:mean-blur" />
            </Menu>
        </Menu>
    </MenuBar>
    <ToolBar fx:id="toolBar" id="toolBar">
        <ActionableRadioButton styleClass="tool" actionId="pino:tools:activate-draw-tool"  selected="true">
            <graphic>
                <FontIcon styleClass="font-icon" iconLiteral="mdi2p-pencil" />
            </graphic>
        </ActionableRadioButton>
        <ActionableRadioButton styleClass="tool" actionId="pino:tools:activate-hand-tool">
            <graphic>
                <FontIcon styleClass="font-icon" iconLiteral="mdi2a-arrow-all"/>
            </graphic>
        </ActionableRadioButton>


        <ActionableButton actionId="pino:undo">
            <graphic>
                <FontIcon id="undo" styleClass="font-icon" iconLiteral="mdi2u-undo"/>
            </graphic>
        </ActionableButton>
        <ActionableButton actionId="pino:redo">
            <graphic>
                <FontIcon id="redo" styleClass="font-icon" iconLiteral="mdi2r-redo" />
            </graphic>
        </ActionableButton>
    </ToolBar>
    <HBox fx:id="contentPane" VBox.vgrow="ALWAYS">
        <SplitPane HBox.hgrow="ALWAYS" dividerPositions="0.75">
            <Pane fx:id="canvasPane" id="canvas-pane">
                <Canvas fx:id="canvas" id="canvas"/>
            </Pane>
            <SplitPane orientation="VERTICAL" dividerPositions="0.4">
                <EditorGroup>
                    <LayerEditor fx:id="layerEditor"/>
                    <BrushEditor fx:id="brushEditor"/>
                </EditorGroup>
                <Layer fx:id="layer">
                    <ActionableButton actionId="pino:add-layer">
                        <graphic>
                            <FontIcon styleClass="font-icon" iconLiteral="mdi2p-plus-thick" />
                        </graphic>
                    </ActionableButton>
                    <ActionableButton actionId="pino:remove-layer">
                        <graphic>
                            <FontIcon styleClass="font-icon" iconLiteral="mdi2t-trash-can-outline" />
                        </graphic>
                    </ActionableButton>
                    <ActionableButton actionId="pino:raise-layer">
                        <graphic>
                            <FontIcon styleClass="font-icon" iconLiteral="mdi2m-menu-up" />
                        </graphic>
                    </ActionableButton>
                    <ActionableButton actionId="pino:lower-layer">
                        <graphic>
                            <FontIcon styleClass="font-icon" iconLiteral="mdi2m-menu-down" />
                        </graphic>
                    </ActionableButton>
                </Layer>
            </SplitPane>
        </SplitPane>
    </HBox>
    <StatusBar styleClass="status-bar" fx:id="statusBar" text=""/>
</VBox>
